<div class = "container mt-d">
<h1>All Restaurants</h1>
<br>
<ol class = "list-group">
<% @restaurants.each do |restaurant| %>
<div id="list"><li class = "group-list-item"><%= link_to restaurant.name, restaurant_path(restaurant) %></li></div>
<% end %>
</ol>
<br>
<button id="list" class="btn btn-dark"><%= link_to "create restaurant", new_restaurant_path %></button>
</div>
