<div class="container mt-5">
<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p>
<p><strong>Reviews</strong></p>
<ul class="list-group">
<% @restaurant.reviews.each do |review| %>
<div id="list"> <li class="list-group-item"><%= review.content %> <%= review.rating %></li></div>
<% end %>
</ul>
