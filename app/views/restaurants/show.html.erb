<button id="list"class="btn btn-dark"><%= link_to "reviews", new_restaurant_review_path(@restaurant) %></button>
<br>
<br>
<button id="list"class="btn btn-dark"><%= link_to "all restaurants", restaurants_path %></button>
</div>
